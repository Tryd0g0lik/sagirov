name: messager

on:
  push:
    branches: [ "master" ]
  pull_request:
    branches: [ "master" ]

permissions:
  checks: write
  contents: write
  pages: write
  id-token: write
  deployments: write
  
jobs:
  build:
    runs-on: ubuntu-latest
    environment:
      name: github-pages
      url: ${{ steps.deployment.outputs.page_url }}

    strategy:
      max-parallel: 4
      matrix:
        node-version: [18.x]
        python-version: [3.10,]


    steps:
      - uses: actions/checkout@v4
          # For a Django
      - name: Set up Python ${{ matrix.python-version }}
        uses: actions/setup-python@v3
        with:
          python-version: ${{ matrix.python-version }}
      - name: Install Dependencies
        run: |
          
          python -m pip install --upgrade pip
          pip install -r requirements.txt

      # действие проверяет содержимое хранилища, в котором
      # размещен вызывающий рабочий процесс, а не вызываемый рабочий процесс.
      # For a Javascript
      - name: Use Node.js ${{ matrix.node-version }}
        uses: actions/setup-node@v3
        with:
          node-version: ${{ matrix.node-version }}

      # - name: Install dependencies
      #   run: cd src/app/frontend && yarn run build:dev
      - name: Install dependencies
        run: cd app_messager/frontend && yarn install
      
        
      - name: Build-All
        run: cd app_messager/frontend && yarn run build:dev
        

      - name: Setup Pages
        uses: actions/configure-pages@v2

#      - name: Upload artifact_
#        uses: actions/upload-pages-artifact@v3.0.1
#        with:
#          path: 'app_messager/static/js'

#      - name: Run Start
#        run: |
#          python manage.py runserver

      # - name: Deploy to GitHub Pages
      #   uses: peaceiris/actions-gh-pages@v1
      #   with:
      #     github_token: ${{ secrets.GITHUB_TOKEN }}
      #     publish_dir: ./build
